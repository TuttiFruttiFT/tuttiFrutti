# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET     /                           			controllers.Application.index()

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               			controllers.Assets.at(path="/public", file)

POST	/jugador								controllers.Jugadores.registrar()

GET		/jugador								controllers.Jugadores.validar(mail,clave,facebookId,twitterId)

PUT		/jugador								controllers.Jugadores.editarPerfil()	

GET		/jugador/sincronizacion/:idJugador		controllers.Jugadores.sincronizar(idJugador)

GET		/jugador/partidas/:idJugador			controllers.Jugadores.obtenerPartidas(idJugador)

POST	/jugador/invitacion						controllers.Jugadores.invitarJugadores()

POST	/jugador/invitacion						controllers.Jugadores.agregarAmigo()

GET		/partida/:idPartida						controllers.Partidas.obtenerPartida(idPartida)

POST	/partida/publica						controllers.Partidas.nuevaPartidaPublica()

POST	/partida/privada						controllers.Partidas.nuevaPartidaPrivada()

POST	/partida/turno							controllers.Partidas.jugarTurno()

POST	/rus/compra								controllers.Rus.comprar()

GET		/rus/packs								controllers.Rus.obtenerPacks()

PUT		/palabra/sugerencia						controllers.Palabra.sugerir()

PUT		/palabra/validacion						controllers.Palabra.validar()

GET		/palabra/lista							controllers.Palabra.palabrasAValidar()

GET		/busqueda/jugador/:palabraABuscar		controllers.Busqueda.buscarJugadores(palabraABuscar)

GET		/busqueda/jugador/otros					controllers.Busqueda.buscarOtros()

GET		/categoria/lista						controllers.Categoria.categoriasDisponibles()
