# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

POST	/player									    @tuttifrutti.controllers.Players.register()
                                                    
GET		/player									    @tuttifrutti.controllers.Players.validate(mail,password,facebookId,twitterId)
                                                    
PUT		/player									    @tuttifrutti.controllers.Players.editProfile()
                                                    
GET		/player/:playerId						    @tuttifrutti.controllers.Players.player(playerId)
                                                    
GET		/player/sync/:playerId					    @tuttifrutti.controllers.Players.sync(playerId)
                                                    
GET		/player/matches/:playerId				    @tuttifrutti.controllers.Players.activeMatches(playerId)
                                                    
POST	/player/invitation						    @tuttifrutti.controllers.Players.invitePlayers()
                                                    
POST	/player/friend							    @tuttifrutti.controllers.Players.addFriend()
                                                    
POST	/player/:playerId/powerup/:idPowerUp	    @tuttifrutti.controllers.Players.powerUp(playerId,idPowerUp)

GET		/match/:matchId							    @tuttifrutti.controllers.Matches.getMatch(matchId)

POST	/match/public								@tuttifrutti.controllers.Matches.publicMatch()

POST	/match/private								@tuttifrutti.controllers.Matches.privateMatch()

POST	/match/turn									@tuttifrutti.controllers.Matches.turn()

GET		/match/:matchId/round/:roundNumber/result	@tuttifrutti.controllers.Matches.roundResult(matchId,roundNumber:Int)

GET		/match/result/:matchId						@tuttifrutti.controllers.Matches.matchResult(matchId)

POST	/rus/purchase								@tuttifrutti.controllers.Rus.buy()

GET		/rus/packs									@tuttifrutti.controllers.Rus.packs()

PUT		/word/suggest								tuttifrutti.controllers.Suggestions.suggest()

PUT		/word/judgement								tuttifrutti.controllers.Suggestions.judge()

GET		/word/:playerId								tuttifrutti.controllers.Suggestions.getWords(playerId)

GET		/search/player/:searchedTerm				@tuttifrutti.controllers.Searches.searchPlayers(searchedTerm)

GET		/search/player/others/:playerId				@tuttifrutti.controllers.Searches.searchOthers(playerId)

GET		/category/list								tuttifrutti.controllers.Categories.availableCategories()
