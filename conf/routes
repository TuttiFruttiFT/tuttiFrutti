# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET     /                           			controllers.Application.index()

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               			controllers.Assets.at(path="/public", file)

POST	/jugador								controllers.Jugadores.registrar()

GET		/jugador								controllers.Jugadores.validar(mail,clave,facebookId,twitterId)

PUT		/jugador								controllers.Jugadores.editarPerfil()

GET		/jugador/:idJugador						controllers.Jugadores.obtenerJugador(idJugador)

GET		/jugador/sincronizacion/:idJugador		controllers.Jugadores.sincronizar(idJugador)

GET		/jugador/partidas/:idJugador			controllers.Jugadores.obtenerPartidas(idJugador)

POST	/jugador/invitacion						controllers.Jugadores.invitarJugadores()

POST	/jugador/amistad						controllers.Jugadores.agregarAmigo()

POST	/jugador/:idJugador/powerup/:idPowerUp	controllers.Jugadores.powerUp(idJugador,idPowerUp)

GET		/partida/:idPartida						controllers.Partidas.obtenerPartida(idPartida)

POST	/partida/publica						controllers.Partidas.nuevaPartidaPublica()

POST	/partida/privada						controllers.Partidas.nuevaPartidaPrivada()

POST	/partida/turno							controllers.Partidas.jugarTurno()

GET		/partida/:idPartida/turno/:numeroTurno/resultado	controllers.Partidas.resultadoTurno(idPartida,numeroTurno)

GET		/partida/resultado/:idPartida			controllers.Partidas.resultadoPartida(idPartida)

POST	/rus/compra								controllers.Rus.comprar()

GET		/rus/packs								controllers.Rus.obtenerPacks()

PUT		/palabra/sugerencia						controllers.Sugerencias.sugerir()

PUT		/palabra/juicio							controllers.Sugerencias.juzgar()

GET		/palabra/:idJugador						controllers.Sugerencias.palabraAValidar(idJugador)

GET		/busqueda/jugador/:palabraABuscar		controllers.Busqueda.buscarJugadores(palabraABuscar)

GET		/busqueda/jugador/otros/:idJugador		controllers.Busqueda.buscarOtros(idJugador)

GET		/categoria/lista						controllers.Categoria.categoriasDisponibles()
