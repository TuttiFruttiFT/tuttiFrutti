# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               			    controllers.Assets.at(path="/public", file)
                                                    
POST	/player									    controllers.Players.register()
                                                    
GET		/player									    controllers.Players.validate(mail,password,facebookId,twitterId)
                                                    
PUT		/player									    controllers.Players.editProfile()
                                                    
GET		/player/:playerId						    controllers.Players.player(playerId)
                                                    
GET		/player/sync/:playerId					    controllers.Players.sync(playerId)
                                                    
GET		/player/matches/:playerId				    controllers.Players.activeMatches(playerId)
                                                    
POST	/player/invitation						    controllers.Players.invitePlayers()
                                                    
POST	/player/friend							    controllers.Players.addFriend()
                                                    
POST	/player/:playerId/powerup/:idPowerUp	    controllers.Players.powerUp(playerId,idPowerUp)

GET		/match/:matchId							    controllers.Matches.getMatch(matchId)

POST	/match/public								controllers.Matches.publicMatch()

POST	/match/private								controllers.Matches.privateMatch()

POST	/match/turn									controllers.Matches.turn()

GET		/match/:matchId/round/:roundNumber/result	controllers.Matches.roundResult(matchId,roundNumber:Int)

GET		/match/result/:matchId						controllers.Matches.matchResult(matchId)

POST	/rus/purchase								controllers.Rus.buy()

GET		/rus/packs									controllers.Rus.packs()

PUT		/word/suggest								controllers.Suggestions.suggest()

PUT		/word/judgement								controllers.Suggestions.judge()

GET		/word/:playerId								controllers.Suggestions.getWords(playerId)

GET		/search/player/:searchedTerm				controllers.Searches.searchPlayers(searchedTerm)

GET		/search/player/others/:playerId				controllers.Searches.searchOthers(playerId)

GET		/category/list								controllers.Categories.availableCategories()
